<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <img src="/assets/images/burger.png" alt="Juicy Cheeseburger">
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-5">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/if}}
            {{/each}}            
        </div>
    </div>
    <div class="col text-center">
        <form>
            <div class="form-group">
                <label for="burgerNameInput">Burger Name</label>
                <input type="text" name="burgerNameInput" id="burgerNameInput" class="form-control">
                <button type="button" class="btn btn-outline-danger btn-block" id="addOrder">Add Order</button>
            </div>
        </form>
    </div>
</div>